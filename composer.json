{
  "name": "kocal/validator",
  "description": "Validator bassed on Laravel Validator, with support of translation.",
  "type": "library",
  "license": "GPL-3.0",
  "version": "0.1.0",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Hugo Alliaume",
      "email": "kocal@live.fr"
    }
  ],
  "scripts": {
    "spec": "kahlan --reporter=verbose"
  },
  "autoload": {
    "psr-4": {
      "Kocal\\Validator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kocal\\Spec\\": "spec/"
    }
  },
  "require": {
    "php": ">=5.6",
    "illuminate/validation": "^5.4",
    "caouecs/laravel-lang": "~3.0",
    "illuminate/filesystem": "5.4"
  },
  "require-dev": {
    "kahlan/kahlan": "^3.1"
  }
}
